{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Git Diff RAG (Dry Run)",
            "type": "shell",
            "command": "./scripts/New-Bundle.sh",
            "args": [
                "--repo",
                "${input:repoName}",
                "--dry-run"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run Git Diff RAG (Full)",
            "type": "shell",
            "command": "./scripts/New-Bundle.sh",
            "args": [
                "--repo",
                "${input:repoName}"
            ],
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "repoName",
            "type": "promptString",
            "description": "Enter the repository name (e.g., demo-app)",
            "default": "demo-app"
        }
    ]
}
